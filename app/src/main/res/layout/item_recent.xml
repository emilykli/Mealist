<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/recents_image_size"
    android:layout_height="@dimen/recents_height"
    android:layout_margin="@dimen/meal_padding_margin"
    >


    <ImageView
        android:id="@+id/ivRecentRecipeImage"
        android:layout_width="@dimen/recents_image_size"
        android:layout_height="@dimen/recents_image_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRecentRecipeName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recents_text_height"
        android:padding="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivRecentRecipeImage"
        tools:text="@string/sample_recipe_name" />

</androidx.constraintlayout.widget.ConstraintLayout>