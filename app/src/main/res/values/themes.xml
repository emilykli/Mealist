<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mealist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lygmy_purple</item>
        <item name="colorPrimaryVariant">@color/lygmy_purple_variation</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lygmy_blue</item>
        <item name="colorSecondaryVariant">@color/lygmy_blue_variation</item>
        <item name="colorOnSecondary">@color/lygmy_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:fontFamily">@font/numans</item>
        <item name="fontFamily">@font/numans</item>

    </style>

    <style name="accessBoxes" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/lygmy_blue</item>
    </style>

    <!--  style for title text  -->
    <style name="specialText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/baloo_bhai</item>
        <item name="fontFamily">@font/baloo_bhai</item>
    </style>

    <!--style for subtitle text-->
    <style name="specialText2">
        <item name="android:textColor">@color/lygmy_grey</item>
        <item name="android:fontFamily">@font/baloo_bhai</item>
        <item name="fontFamily">@font/baloo_bhai</item>
    </style>


</resources>